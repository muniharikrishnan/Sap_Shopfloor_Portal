<mvc:View
  controllerName="SHOPFLOOR.controller.Dashboard"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.f"
  xmlns:ui="sap.ui.layout"
  displayBlock="true">

  <Page showHeader="false" class="dashboardPage">
    <VBox class="dashboardWrapper">

      <!-- Enhanced Top Header -->
      <HBox class="dashboardHeader" alignItems="Center" justifyContent="SpaceBetween">
        <VBox class="headerLeft">
          <HBox alignItems="Center" class="titleSection">
            <core:Icon id="headerIcon" src="sap-icon://factory" size="2.5rem" color="#ffffff" class="headerIcon" />
            <VBox class="titleTexts">
              <Text text="SAP Shopfloor Portal" class="dashboardTitle" />
              <Text text="Production Management Dashboard" class="dashboardSubtitle" />
            </VBox>
          </HBox>
          <Text text="Welcome, Plant: {/plant}" class="userInfo" />
        </VBox>
        <Button 
          id="logoutButton"
          text="Logout" 
          press="onLogoutPress" 
          class="logoutButton" 
          type="Emphasized" 
          icon="sap-icon://log" />
      </HBox>

      <!-- Enhanced Tile Section -->
      <VBox class="tileContainer" alignItems="Center" justifyContent="Center">
        <VBox class="tileGrid" alignItems="Center" justifyContent="Center">
          
          <!-- First Row -->
          <HBox class="tileRow" alignItems="Center" justifyContent="Center">
            <!-- Month-wise Planned Orders Tile -->
            <GenericTile press="onPlannedOrdersMonthPress" class="dashboardTile plannedOrdersMonthTile" size="M" frameType="TwoByOne">
              <TileContent>
                <VBox alignItems="Center" justifyContent="Center" class="tileInnerContent">
                  <Text text="Month-wise Planned Orders" textAlign="Center" class="tileTitle" />
                  <Text text="View monthly planned order activities and schedules" textAlign="Center" wrapping="true" class="tileSubText" />
                  <Text text="Click to access" textAlign="Center" class="tileAction" />
                </VBox>
              </TileContent>
            </GenericTile>

            <!-- Year-wise Planned Orders Tile -->
            <GenericTile press="onPlannedOrdersYearPress" class="dashboardTile plannedOrdersYearTile" size="M" frameType="TwoByOne">
              <TileContent>
                <VBox alignItems="Center" justifyContent="Center" class="tileInnerContent">
                  <Text text="Year-wise Planned Orders" textAlign="Center" class="tileTitle" />
                  <Text text="View yearly planned order overview and trends" textAlign="Center" wrapping="true" class="tileSubText" />
                  <Text text="Click to access" textAlign="Center" class="tileAction" />
                </VBox>
              </TileContent>
            </GenericTile>
          </HBox>
          
          <!-- Second Row -->
          <HBox class="tileRow" alignItems="Center" justifyContent="Center">
            <!-- Month-wise Production Orders Tile -->
            <GenericTile press="onProductionOrdersMonthPress" class="dashboardTile productionOrdersMonthTile" size="M" frameType="TwoByOne">
              <TileContent>
                <VBox alignItems="Center" justifyContent="Center" class="tileInnerContent">
                  <Text text="Month-wise Production Orders" textAlign="Center" class="tileTitle" />
                  <Text text="Monitor monthly production order status and progress" textAlign="Center" wrapping="true" class="tileSubText" />
                  <Text text="Click to access" textAlign="Center" class="tileAction" />
                </VBox>
              </TileContent>
            </GenericTile>

            <!-- Year-wise Production Orders Tile -->
            <GenericTile press="onProductionOrdersYearPress" class="dashboardTile productionOrdersYearTile" size="M" frameType="TwoByOne">
              <TileContent>
                <VBox alignItems="Center" justifyContent="Center" class="tileInnerContent">
                  <Text text="Year-wise Production Orders" textAlign="Center" class="tileTitle" />
                  <Text text="Track yearly production order performance and analytics" textAlign="Center" wrapping="true" class="tileSubText" />
                  <Text text="Click to access" textAlign="Center" class="tileAction" />
                </VBox>
              </TileContent>
            </GenericTile>
          </HBox>
        </VBox>
      </VBox>

    </VBox>
  </Page>
</mvc:View>
