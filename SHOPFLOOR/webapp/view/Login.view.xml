<mvc:View controllerName="SHOPFLOOR.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page showHeader="false">
        <content>
            <VBox alignItems="Center" justifyContent="Center" height="100%">
                <Text text="Login" />
                <Input id="usernameInput" placeholder="Username" />
                <Input id="passwordInput" placeholder="Password" type="Password" />
                <Button id="loginButton" text="Login" press="onLoginPress" />
                <Text id="statusText" text="" visible="false" />
            </VBox>
        </content>
    </Page>

</mvc:View>